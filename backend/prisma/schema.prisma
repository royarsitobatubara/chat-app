generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.objectId
  username  String
  email     String
  password  String
  photo     String
  token     String?

  @@map("users")
}

model Contact {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email_user    String
  email_contact String

  @@map("contacts")
}